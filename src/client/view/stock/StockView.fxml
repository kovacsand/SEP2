<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.stock.StockViewController">
   <children>
      <VBox>
         <children>
            <TableView>
              <columns>
                <TableColumn id="id" editable="false" maxWidth="75.0" minWidth="75.0" prefWidth="75.0" text="ID" />
                <TableColumn id="name" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Name" />
                  <TableColumn id="description" maxWidth="375.0" minWidth="375.0" prefWidth="375.0" text="Description" />
                  <TableColumn id="price" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Price" />
                  <TableColumn id="stock" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Stock" />
              </columns>
            </TableView>
            <HBox alignment="CENTER">
               <children>
                <Button mnemonicParsing="false" onAction="#onBackButtonPress" text="Back">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font size="26.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" text="Increase Stock" textAlignment="CENTER" textOverrun="CLIP" wrapText="true">
                     <HBox.margin>
                        <Insets left="100.0" />
                     </HBox.margin>
                     <font>
                        <Font size="26.0" />
                     </font>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
